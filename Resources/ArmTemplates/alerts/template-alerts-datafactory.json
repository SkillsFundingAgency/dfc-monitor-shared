{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Scope": {
            "type": "array"
        },
        "Environment": {
            "type": "string"
        },
        "ActionGroupStakeholdersId": {
            "type": "string"
        },
        "ActionGroupBauId": {
            "type": "string"
        },
        "ActionGroupOncallId": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[concat('alert-',parameters('Environment'),'-datafactory-failedActivityRun')]",
            "location": "global",
            "tags": {
            },
            "properties": {
                "displayName": "[concat('alert-',parameters('Environment'),'-datafactory-failedActivityRun')]",
                "description": "[concat(parameters('Environment'),' Data Factory alert - Failed Activity Run')]",
                "scopes": "[parameters('Scope')]",
                "severity": 2,
                "enabled": true,
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 0,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.DataFactory/factories",
                            "metricName": "ActivityFailedRuns",
                            "operator": "GreaterThan",
                            "timeAggregation": "Total",
                            "skipMetricValidation": false,
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.DataFactory/factories",
                "targetResourceRegion": "westeurope",
                "actions": [
                    {
                        "actionGroupId": "[parameters('ActionGroupOncallId')]",
                        "webHookProperties": {}
                    }
                ]
            
            }
        },
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[concat('alert-',parameters('Environment'),'-datafactory-failedPipelineRun')]",
            "location": "global",
            "tags": {
            },
            "properties": {
                "displayName": "[concat('alert-',parameters('Environment'),'-datafactory-failedPipelineRun')]",
                "description": "[concat(parameters('Environment'),' Data Factory alert - Failed Pipeline Run')]",
                "severity": 2,
                "enabled": true,
                "scopes": "[parameters('Scope')]",
                "targetResourceTypes": [
                    "microsoft.datafactory/factories"
                ],
                "targetResourceRegion": "westeurope",
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 0,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.DataFactory/factories",
                            "metricName": "TriggerFailedRuns",
                            "operator": "GreaterThan",
                            "timeAggregation": "Total",
                            "skipMetricValidation": false,
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "actions": [
                    {
                        "actionGroupId": "[parameters('ActionGroupOncallId')]",
                        "webHookProperties": {}
                    }
                ]
            }
        },
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[concat('alert-',parameters('Environment'),'-datafactory-failedTriggerRun')]",
            "location": "global",
            "tags": {
            },
            "properties": {
                "displayName": "[concat('alert-',parameters('Environment'),'-datafactory-failedTriggerRun')]",
                "description": "[concat(parameters('Environment'),' Data Factory alert - Failed Trigger Run')]",
                "severity": 2,
                "enabled": true,
                "scopes": "[parameters('Scope')]",
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 0,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.DataFactory/factories",
                            "metricName": "TriggerFailedRuns",
                            "operator": "GreaterThan",
                            "timeAggregation": "Total",
                            "skipMetricValidation": false,
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.DataFactory/factories",
                "targetResourceRegion": "westeurope",
                "actions": [
                    {
                        "actionGroupId": "[parameters('ActionGroupOncallId')]",
                        "webHookProperties": {}
                    }
                ]
            }
        }
    ]
}