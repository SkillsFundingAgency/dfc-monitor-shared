{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appInsightsName": {
      "type": "String"
    },
    "actionGroupName1": {
      "type": "String"
    },
    "actionGroupShortName1": {
      "type": "String"
    },
    "actionGroupEmail1": {
      "type": "String"
    },
    "actionGroupName2": {
      "type": "String"
    },
    "actionGroupShortName2": {
      "type": "String"
    },
    "actionGroupEmail2": {
      "type": "String"
    },
    "actionGroupName3": {
      "type": "String"
    },
    "actionGroupShortName3": {
      "type": "String"
    },
    "actionGroupEmail3": {
      "type": "String"
    },
    "dashboardName": {
      "type": "String"
    },
    "workspaceName": {
      "type": "string"
    },
    "workspaceResourceGroup": {
      "type": "string"
    }
  },
  "variables": {
    "emailGroup1AsArray": "[split(parameters('actionGroupEmail1'), ',')]",
    "copy": [
        {
        "name": "expandedEmailGroup1",
        "count": "[length(variables('emailGroup1AsArray'))]",
        "input": {
          "name": "[format('{0}-EmailAction-EmailAddr-{1}]', parameters('actionGroupShortName1'), copyIndex('expandedEmailGroup1'))]",
          "emailAddress": "[variables('emailGroup1AsArray')[copyIndex('expandedEmailGroup1')]]",
          "useCommonAlertSchema": false
        }
      }
    ]
  },
  "resources": [
    {
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2023-01-01",
      "name": "[parameters('actionGroupName1')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[parameters('actionGroupShortName1')]",
        "enabled": true,
        "emailReceivers": "[variables('expandedEmailGroup1')]",
        "smsReceivers": [],
        "webhookReceivers": [],
        "eventHubReceivers": [],
        "itsmReceivers": [],
        "azureAppPushReceivers": [],
        "automationRunbookReceivers": [],
        "voiceReceivers": [],
        "logicAppReceivers": [],
        "azureFunctionReceivers": [],
        "armRoleReceivers": []
      }
    },
    {
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2023-01-01",
      "name": "[parameters('actionGroupName2')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[parameters('actionGroupShortName2')]",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "[concat(parameters('actionGroupShortName2'),'_-EmailAction-')]",
            "emailAddress": "[parameters('actionGroupEmail2')]",
            "useCommonAlertSchema": false
          }
        ],
        "smsReceivers": [],
        "webhookReceivers": [], 
        "eventHubReceivers": [],
        "itsmReceivers": [],
        "azureAppPushReceivers": [],
        "automationRunbookReceivers": [],
        "voiceReceivers": [],
        "logicAppReceivers": [],
        "azureFunctionReceivers": [],
        "armRoleReceivers": []
      }
    },
    {
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2023-01-01",
      "name": "[parameters('actionGroupName3')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[parameters('actionGroupShortName3')]",
        "enabled": true,
        "emailReceivers": [
          {
            "name": "[concat(parameters('actionGroupShortName3'),'_-EmailAction-')]",
            "emailAddress": "[parameters('actionGroupEmail3')]",
            "useCommonAlertSchema": false
          }
        ],
        "smsReceivers": [],
        "webhookReceivers": [],
        "eventHubReceivers": [],
        "itsmReceivers": [],
        "azureAppPushReceivers": [],
        "automationRunbookReceivers": [],
        "voiceReceivers": [],
        "logicAppReceivers": [],
        "azureFunctionReceivers": [],
        "armRoleReceivers": []
      }
    },
    {
      "type": "microsoft.insights/components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('appInsightsName')]",
      "location":"[resourceGroup().location]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "RetentionInDays": 90,
        "WorkspaceResourceId": "[resourceId(parameters('workspaceResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]",
        "IngestionMode": "LogAnalytics",
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.Portal/dashboards",
      "apiVersion": "2020-09-01-preview",
      "name": "[parameters('dashboardName')]",
      "location":"[resourceGroup().location]",
      "tags": {
        "hidden-title": "[parameters('dashboardName')]"
      },
      "properties": {
        "lenses": [
          {
            "order": 0,
            "parts": []
          }
        ],
        "metadata": {
          "model": {}
        }
      }
    },
    {
      "type": "microsoft.insights/components/ProactiveDetectionConfigs",
      "apiVersion": "2018-05-01-preview",
      "name": "[concat(parameters('appInsightsName'), '/degradationindependencyduration')]",
      "dependsOn": [
        "[resourceId('microsoft.insights/components', parameters('appInsightsName'))]"
      ],
      "properties": {
        "ruleDefinitions": {
          "Name": "degradationindependencyduration",
          "DisplayName": "Degradation in dependency duration",
          "Description": "Smart Detection rules notify you of performance anomaly issues.",
          "HelpUrl": "https://docs.microsoft.com/en-us/azure/application-insights/app-insights-proactive-performance-diagnostics",
          "IsHidden": false,
          "IsEnabledByDefault": true,
          "IsInPreview": false,
          "SupportsEmailNotifications": true
        },
        "enabled": true,
        "sendEmailsToSubscriptionOwners": true,
        "customEmails": []
      }
    },
    {
      "type": "microsoft.insights/components/ProactiveDetectionConfigs",
